<style>
    @keyframes slideIn {
        from {
            transform: translateX(-100%);
        }

        to {
            transform: translateX(0%);
        }
    }

    @keyframes slideOut {
        from {
            transform: translateX(0%);
        }

        to {
            transform: translateX(-100%);
        }
    }

    .animate-slide-in {
        animation: slideIn 0.7s ease-out forwards;
    }

    .animate-slide-out {
        animation: slideOut 0.7s ease-out forwards;
