<div class="w-full z-20 p-4 bg-black shadow-md">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <a
      href="/"
      class="relative flex flex-col items-end -space-y-2 hover:text-red-600 hover:scale-105 transition-all duration-300"
    >
      <div class="flex items-center text-3xl font-bold">
        <p class="text-red-600 text-4xl">M</p>
        <div
          class="relative w-7 h-7 text-center bg-red-600 rounded-full flex items-center justify-center shadow-md"
        >
          <i class="fa-solid fa-video text-white text-base"></i>
        </div>
        <span class="text-white font-serif">vie</span>
      </div>
      <div class="">
        <p class="text-lg font-bold text-white">Reviews</p>
      </div>
    </a>
    <button
      onclick="toggleMenu()"
      class="flex items-center text-white cursor-pointer hover:text-yellow-400 transition duration-300 ml-10"
    >
      <i class="fas fa-list text-2xl"></i>
      <p class="ml-2 text-lg hidden sm:block">Menu</p>
    </button>
    <div class="flex-1 mx-6 relative">
      <input
        type="search"
        name="search"
        id="search"
        class="w-2/3 border bg-gray-100 border-gray-300 rounded-lg px-4 py-2 pl-10 text-gray-800 shadow-sm focus:outline-none focus:border-yellow-400"
        placeholder="Search MovieReviews..."
      />
      <svg
        class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500 w-5 h-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-4.35-4.35m1.85-5.15a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>
    </div>
    <% if (user) { %> <%- include('../partials/user.ejs') %> <% } else { %> <%-
    include('../partials/guest.ejs') %> <% } %>
  </div>
</div>
